@model PedagogyWorld.Models.FileModel

@* This partial view defines form fields that will appear when creating and editing entities *@

<div class="editor-label">
    @Html.LabelFor(model => model.Name)
</div>
<div class="editor-field">
   @Html.EditorFor(model => model.Name)
   @Html.ValidationMessageFor(model => model.Name)
</div>

<div class="editor-field">
   <input type='file' name='files' id='files' />
@*   @Html.EditorFor(model => model.Path)
   @Html.ValidationMessageFor(model => model.Path)*@
</div>

<div class="editor-field">
   @Html.DropDownListFor(model => model.FileType, ((IEnumerable<PedagogyWorld.Data.FileType>)ViewBag.FileTypes).Select(option => new SelectListItem {
      Text = (option == null ? "None" : option.Name), 
      Value = option.Id.ToString(),
      Selected = (Model != null) && (option.Id == Model.FileType)
   }), "Choose...")
   @Html.ValidationMessageFor(model => model.FileType)
</div>
   
<div class="editor-field">
    @Html.HiddenFor(model => model.UnitId, new { Value = ViewBag.UnitId })
</div>

