@model IEnumerable<PedagogyWorld.Data.File>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", new {unitId="BB94ACD1-21BC-4E57-BC05-AE6318A7E99D", fileTypeId = 2})
</p>
<table>
    <tr>
        <th></th>
        <th>
            Name
        </th>
        <th>
            Path
        </th>
        <th>
            FileTypes
        </th>
        <th>
            Units
        </th>
        <th>
            TeachingDates
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
			@item.Name
        </td>
        <td>
			@item.Path
        </td>
        <td>
			@(item.FileTypes == null ? "None" : item.FileTypes.Count.ToString())
        </td>
        <td>
			@(item.Units == null ? "None" : item.Units.Count.ToString())
        </td>
        <td>
			@(item.TeachingDates == null ? "None" : item.TeachingDates.Count.ToString())
        </td>
    </tr>
}

</table>


