<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
               <div class="float-left">
                  <p class="site-title"><a href="@Url.Action("Index","Home", new { Area=""})"><img src="~/Images/Logo.png" alt="Pedagogy World"/></a></p>
                  <p class="site-title" style="margin-left: 500px">@Html.ActionLink("Beta", "Index", "Home")</p>
               </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                           @if(Request.IsAuthenticated)
                           {
                              <li>@Html.ActionLink("My Units", "Index", "Unit", new { Area=""}, new { id = "MyUnitsLink" })</li>
                              <li>@Html.ActionLink("Planner", "Planner", "File", new { Area=""}, new { id = "PlannerLink" })</li>
                              <li>@Html.ActionLink("Settings", "Manage", "Account", new { Area=""},new { id = "SettingsLink" })</li>
                           }
                           else
                           {
                              <li>@Html.ActionLink("About", "About", "Home", new { Area=""}, new { id = "AboutLink" })</li>                           
                           }
                           <li>@Html.ActionLink("Help", "Help", "Home", new { Area=""}, new { id = "HelpLink" })</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Pedagogy World</p>
                </div>
            </div>
        </footer>
        @Scripts.Render("~/bundles/jquery")
       @RenderSection("scripts", required: false)
    </body>
</html>
