@model PedagogyWorld.Unit

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>Unit</legend>

    <div class="display-label">UnitName</div>
    <div class="display-field">@Model.UnitName</div>

    <div class="display-label">Description</div>
    <div class="display-field">@Model.Description</div>

    <div class="display-label">Grade_Id</div>
    <div class="display-field">@Model.Grade_Id</div>

    <div class="display-label">Subject_Id</div>
    <div class="display-field">@Model.Subject_Id</div>

    <div class="display-label">Grade</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.Grade).ToString()</div>

    <div class="display-label">OutcomeUnits</div>
    <div class="display-field">@(Model.OutcomeUnits == null ? "None" : Model.OutcomeUnits.Count.ToString())</div>

    <div class="display-label">Subject</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.Subject).ToString()</div>

    <div class="display-label">UnitFiles</div>
    <div class="display-field">@(Model.UnitFiles == null ? "None" : Model.UnitFiles.Count.ToString())</div>

    <div class="display-label">UnitStandards</div>
    <div class="display-field">@(Model.UnitStandards == null ? "None" : Model.UnitStandards.Count.ToString())</div>

    <div class="display-label">UnitUserProfiles</div>
    <div class="display-field">@(Model.UnitUserProfiles == null ? "None" : Model.UnitUserProfiles.Count.ToString())</div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>


