@model IEnumerable<PedagogyWorld.Unit>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            UnitName
        </th>
        <th>
            Description
        </th>
        <th>
            Grade
        </th>
        <th>
            Subject
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
			@item.UnitName
        </td>
        <td>
			@item.Description
        </td>
        <td>
			@Html.DisplayTextFor(_ => item.Grade.GradeName).ToString()
        </td>
        <td>
        <td>
			@Html.DisplayTextFor(_ => item.Subject.SubjectName).ToString()
        </td>
    </tr>
}

</table>


