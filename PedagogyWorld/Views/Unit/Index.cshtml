@model IEnumerable<PedagogyWorld.Unit>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            UnitName
        </th>
        <th>
            Description
        </th>
        <th>
            Grade_Id
        </th>
        <th>
            Subject_Id
        </th>
        <th>
            Grade
        </th>
        <th>
            OutcomeUnits
        </th>
        <th>
            Subject
        </th>
        <th>
            UnitFiles
        </th>
        <th>
            UnitStandards
        </th>
        <th>
            UnitUserProfiles
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
			@item.UnitName
        </td>
        <td>
			@item.Description
        </td>
        <td>
			@item.Grade_Id
        </td>
        <td>
			@item.Subject_Id
        </td>
        <td>
			@Html.DisplayTextFor(_ => item.Grade).ToString()
        </td>
        <td>
			@(item.OutcomeUnits == null ? "None" : item.OutcomeUnits.Count.ToString())
        </td>
        <td>
			@Html.DisplayTextFor(_ => item.Subject).ToString()
        </td>
        <td>
			@(item.UnitFiles == null ? "None" : item.UnitFiles.Count.ToString())
        </td>
        <td>
			@(item.UnitStandards == null ? "None" : item.UnitStandards.Count.ToString())
        </td>
        <td>
			@(item.UnitUserProfiles == null ? "None" : item.UnitUserProfiles.Count.ToString())
        </td>
    </tr>
}

</table>


