@model PedagogyWorld.Grade

@{
    ViewBag.Title = "Delete";
}

@if (Model.UnitGrades.Any(t=>t.Grade_Id != Model.Id))
{
    <h2>Can't delete grade used by units. This grade is used by @Model.UnitGrades.Count(t=>t.Grade_Id == Model.Id).ToString() units.</h2>
    <p>@Html.ActionLink("Back to List", "Index")</p>
}
else
{
    <h2>Delete</h2>

    <h3>Are you sure you want to delete this?</h3>
    <fieldset>
        <legend>Grade</legend>

        <div class="display-label">Grade</div>
        <div class="display-field">@Model.GradeName</div>
    </fieldset>
    using (Html.BeginForm()) {
        <p>
            <input type="submit" value="Delete" /> |
            @Html.ActionLink("Back to List", "Index")
        </p>
    }
}


