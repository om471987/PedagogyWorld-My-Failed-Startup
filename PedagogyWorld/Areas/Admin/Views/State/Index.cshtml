@model IEnumerable<PedagogyWorld.State>

@{
    ViewBag.Title = "Index";
}

<p>
   @Html.ActionLink("Back to Admin Page List", "Manage","State")
</p>

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            StateName
        </th>
        <th>
            ShortForm
        </th>
        <th>
            Districts
        </th>
        <th>
            Schools
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
			@item.StateName
        </td>
        <td>
			@item.ShortForm
        </td>
        <td>
			@(item.Districts == null ? "None" : item.Districts.Count.ToString())
        </td>
        <td>
			@(item.Schools == null ? "None" : item.Schools.Count.ToString())
        </td>
    </tr>
}

</table>


