@model PedagogyWorld.Subject

@{
    ViewBag.Title = "Delete";
}

@if (Model.UnitSubjects.Any(t=>t.Subject_Id == Model.Id))
{
    <h2>Can't delete Subject used by units. This Subject is used by @Model.UnitSubjects.Count(t=>t.Subject_Id == Model.Id) units.</h2>
   
    <p>@Html.ActionLink("Back to List", "Index")</p>
}
else
{
    <h2>Delete</h2>

    <h3>Are you sure you want to delete this?</h3>
    <fieldset>
        <legend>Subject</legend>

        <div class="display-label">SubjectName</div>
        <div class="display-field">@Model.SubjectName</div>
    </fieldset>
    using (Html.BeginForm()) {
        <p>
            <input type="submit" value="Delete" /> |
            @Html.ActionLink("Back to List", "Index")
        </p>
    }
}

