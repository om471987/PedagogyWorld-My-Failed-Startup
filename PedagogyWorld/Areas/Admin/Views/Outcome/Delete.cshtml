@model PedagogyWorld.Outcome

@{
    ViewBag.Title = "Delete";
}

@if (Model.OutcomeUnits.Any())
{
    <h2>Can't delete Outcome used by units. This Outcome is used by @Model.OutcomeUnits.Count.ToString() units.</h2>
   
    <p>@Html.ActionLink("Back to List", "Index")</p>
}
else
{
    <h2>Delete</h2>

    <h3>Are you sure you want to delete this?</h3>
    <fieldset>
        <legend>Outcome</legend>

        <div class="display-label">OutcomeName</div>
        <div class="display-field">@Model.OutcomeName</div>

        <div class="display-label">Description</div>
        <div class="display-field">@Model.Description</div>

        <div class="display-label">OutcomeUnits</div>
        <div class="display-field">@(Model.OutcomeUnits == null ? "None" : Model.OutcomeUnits.Count.ToString())</div>
    </fieldset>
    using (Html.BeginForm()) {
        <p>
            <input type="submit" value="Delete" /> |
            @Html.ActionLink("Back to List", "Index")
        </p>
    }
}

