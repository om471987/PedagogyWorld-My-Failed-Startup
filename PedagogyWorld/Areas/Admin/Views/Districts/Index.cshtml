@model IEnumerable<PedagogyWorld.Data.District>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
       <th>
          Name
       </th>
       <th>
          State
       </th>
        <th>
            Schools
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
       <td>
          @item.Name
       </td>
       <td>
          @if (item.StateId == 1)
          {
             <text>CA</text>
          }
          else
          {
             <text>CO</text>
          }
       </td>
        <td>
			@(item.Schools == null ? "None" : item.Schools.Count.ToString())
        </td>
    </tr>
}

</table>


